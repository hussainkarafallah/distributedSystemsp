# Dockerfile
FROM ubuntu:latest

RUN \
# Update
apt-get update -y && \
# Install Java
apt-get install default-jre -y

RUN mkdir /client
WORKDIR "/client"
RUN pwd

ADD ./out/artifacts/clientnode_jar/distributedSystemsp.jar ../Excutable_Java.jar
RUN ls ..# Dockerfile

EXPOSE 8000
CMD java -jar ../Excutable_Java.jar